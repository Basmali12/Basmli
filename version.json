fetch('https://basmali12.github.io/Basmli/version.json?v='+new Date().getTime())
  .then(res=>res.json())
  .then(data=>{
    const CURRENT_VERSION = data.version;
    const savedVersion = localStorage.getItem("appVersion");

    if(!savedVersion || savedVersion !== CURRENT_VERSION){
      document.getElementById("refreshBtn").style.display="inline-block";
      alert("هناك تحديث جديد! يرجى تحديث التطبيق للحصول على آخر نسخة.");
    }else{
      document.getElementById("refreshBtn").style.display="none";
    }

    localStorage.setItem("appVersion",CURRENT_VERSION);
  })
  .catch(err=>console.log("خطأ في التحقق من النسخة:",err));
